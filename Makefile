install:
	cp .zshrc ~/
	cp .emacs ~/
	cp -r .emacs.d ~/
	cp .zshort ~/
	cp .zcompletion ~/
	cp .gitconfig  ~/
	cp .gittemplate ~/
	cp -r .zsh ~/
	cp .vimrc ~/
	cp .profile ~/
	cp .zshrc /root
	cp .emacs /root
	cp -r .emacs.d /root
	cp .zshort /root
	cp .zcompletion /root
	cp .gitconfig /root
	cp .gittemplate /root
	cp -r .zsh /root
	cp .vimrc /root
	cp .profile /root

bash-install:
	cp .bashrc ~/
	cp .bash_aliases ~/
	cp .emacs ~/
	cp -r .emacs.d ~/
	cp .gitconfig  ~/
	cp .gittemplate ~/
	cp .vimrc ~/
	cp .profile ~/
	cp .bashrc /root
	cp .emacs /root
	cp -r .emacs.d /root
	cp .bash_aliases /root
	cp .gitconfig  /root
	cp .gittemplate /root
	cp .vimrc /root
	cp .profile /root


