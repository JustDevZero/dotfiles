# Some general Alias
alias mkdir='nocorrect mkdir' # no spelling correction on mkdir
alias fecha='date "+%A %B %d, %Y %l:%M %p %Z"'
alias nano='nano -w -B'
alias home='cd ~'
alias desk='cd ~/Escritorio'
alias top='htop'
alias mytop='htop -u $USER'
alias hist="grep '$1' ~/.histfile"
alias man='LC_ALL=es_ES.UTF-8 man'
alias less='less -M'
alias g='grep --color=auto'

#Process snapshot alias.
alias psa='ps auxf'
alias psg='ps aux | grep --color=auto $1'  #Requiere un argumento

#Space ussage alias.
alias du='du -sh'
alias dul='\du -h | less'
alias df='df -h'


#Listing alias
alias ls='ls --color=auto'
alias ll='ls -oF --color=tty --sort=size'
alias la='ls -oaF --color=tty --sort=size'
alias count='(ls -1 /$(pwd) | wc -l)'

#Apt-Get alias
alias update='sudo apt-get update'
alias install='sudo apt-get install'
alias insta='sudo aptitude install'
alias search='sudo aptitude search'
alias ipconfig='ifconfig|grep inet:'

#Change directory alias
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ......="cd ../../../../.."

# git
alias gitps="git push origin master"
alias gitp="git pull"
alias gitc="git commit -a"
alias gitm="git commit "
alias giti="git init"
