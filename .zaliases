#####      PROGRAMS     #####

###      GENERAL ALIAS     ###
alias mkdir='nocorrect mkdir' # no spelling correction on mkdir
alias nano='nano -w -B'
alias home='cd ~'
alias desk='cd ~/Desktop'
alias hist="grep '$1' ~/.zsh_history"
alias man='LC_ALL=es_ES.UTF-8 man' #For having manpages in spanish
alias less='less -M'
alias grep='grep --color=auto'
alias nestat='sudo netstat -tpav'
alias unix2dos='recode lat1..ibmpc'
alias dos2unix='recode ibmpc..lat1'
alias ls='ls -FX --format=across --color=auto'
alias hgg='fc -l 0|grep'  # Very often I want to see a bunch of history entries instead of simply searching back
alias diffc='colordiff'
alias pget='http_proxy=127.0.0.1:8118 wget' #wget behind proxy
alias myproxy="http_proxy=127.0.0.1:8118 wget http://checkip.dyndns.org/ -q -O - | grep -Eo '\<[[:digit:]]{1,3}(\.[[:digit:]]{1,3}){3}\>'" #Used for knowing the ip
alias myip="wget http://checkip.dyndns.org/ -q -O - | grep -Eo '\<[[:digit:]]{1,3}(\.[[:digit:]]{1,3}){3}\>'" #Used for discover my external ip
alias ban='iptables -I INPUT -j DROP -s'
alias unban='iptables -D INPUT -j DROP -s'

###     ALIAS FOR CHECKSUMS           ###
alias md5='md5sum'
alias sha1='sha1sum'
alias ha224='sha224sum'
alias sha256='sha256sum'
alias sha384='sha384sum'
alias sha512='sha512sum'

###      ALIAS FOR OWNER LAZYNESS     ###
#alias x=exit
alias md='mkdir'
alias rd='rmdir'
alias cls='clear'
alias se='sudo $EDITOR'
alias top='htop'
alias mytop='htop -u $USER'
alias fecha='date "+%A %B %d, %Y %l:%M %p %Z"'

###      ALIAS FOR SECURITY     ###
#alias rm='rm -i'
