#####      PROGRAMS     #####

###      GENERAL ALIAS     ###
alias mkdir='nocorrect mkdir' # no spelling correction on mkdir
alias nano='nano -w -B'
alias home='cd ~'
alias desk='cd ~/Desktop'
alias hist="grep '$1' ~/.zsh_history"
alias man='LC_ALL=es_ES.UTF-8 man' #For having manpages in spanish
alias less='less -M'
alias g='grep --color=auto'
alias nestat='sudo netstat -tpav'
alias unix2dos='recode lat1..ibmpc'
alias dos2unix='recode ibmpc..lat1'
alias ls='ls -FX --format=across --color=auto'
alias hg='fc -l 0|grep'  # Very often I want to see a bunch of history entries instead of simply searching back
alias diffc='colordiff'

###      ALIAS FOR OWNER LAZYNESS     ###
alias x=exit
alias md='mkdir'
alias rd='rmdir'
alias cls='clear'
alias se='sudo $EDITOR'
alias top='htop'
alias mytop='htop -u $USER'
alias fecha='date "+%A %B %d, %Y %l:%M %p %Z"'

###      ALIAS FOR SECURITY     ###
alias rm='rm -i'
alias mv='mv -i'
alias ln='ln -i'

###      ALIAS FOR PROCESS SNAPSHOT     ###
alias psa='ps auxf'
alias psg='ps aux | grep --color=auto $1'  #It requires an argument

###      ALIAS FOR SPACE USAGE     ###
alias du='du -sh'
alias dul='\du -h | less'
alias df='df -h'


###      ALIAS FOR LISTING     ###
alias ll='ls -oF --color=tty --sort=size'
alias la='ls -oaF --color=tty --sort=size'
alias count='(ls -1 /$(pwd) | wc -l)'


###      ALIAS FOR APTITUDE AND APT-GET     ###
alias update='sudo apt-get update'
alias install='sudo apt-get install'
alias insta='sudo aptitude install'
alias reinstall='sudo aptitude reinstall'
alias afind='sudo aptitude search'
alias afile='dpkg-query -S'

###      ALIAS FOR CHANGE DIRECTORY     ###
alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......="../../../../.."
alias dotfile="cd ~/git/dotfiles"

###      ALIAS FOR GIT     ###
alias gitps="git push origin master"
alias gitp="git pull"
alias gitc="git commit -a"
alias gitb='git branch'
alias gitad='git add'
alias gitd='git diff | kompare -o -'
alias gitm="git commit -m"
alias giti="git init"
alias gitst='git status'
alias gitl='git pull'

###      SET UP AUTO EXTENSION STUFF    ###
alias -s html=$BROWSER
alias -s org=$BROWSER
alias -s php=$BROWSER
alias -s com=$BROWSER
alias -s net=$BROWSER
alias -s png=feh
alias -s pnm=feh
alias -s bmp=feh
alias -s jpg=feh
alias -s gif=feg
alias -s sxw=soffice
alias -s doc=soffice
alias -s gz=tar -xzvf
alias -s bz2=tar -xjvf
alias -s java=$EDITOR
alias -s txt=$EDITOR
alias -s pdf=evince
alias -s xcf="gimp"
alias -s psd="gimp"
